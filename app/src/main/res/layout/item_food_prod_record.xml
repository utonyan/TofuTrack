<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@android:color/white">

        <!-- Product Name -->
        <TextView
            android:id="@+id/productNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Product: "
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Date and Time -->
        <TextView
            android:id="@+id/timestampTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Date: "
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/productNameTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Quantity Produced -->
        <TextView
            android:id="@+id/quantityProducedTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Quantity Produced: "
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/timestampTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Total Price -->
        <TextView
            android:id="@+id/totalPriceTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Total Price: â‚±0.00"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/quantityProducedTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Raw Materials -->
        <TextView
            android:id="@+id/rawMaterialsTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Raw Materials: "
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/totalPriceTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Packaging -->
        <TextView
            android:id="@+id/packagingTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Packaging: "
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/rawMaterialsTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
