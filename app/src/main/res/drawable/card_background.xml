<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- Background color of the card -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Background color -->
            <corners android:radius="20dp"/> <!-- Rounded corners -->
        </shape>
    </item>
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <!-- Shadow effect for elevation -->
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Shadow color -->
            <corners android:radius="20dp"/> <!-- Same corner radius -->
        </shape>
    </item>
</layer-list>
